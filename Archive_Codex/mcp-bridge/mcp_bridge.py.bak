    try:
        metrics.set_gauge('codex_health_status', {"component": "mcp"}, 1 if mcp_ok else 0)
        metrics.set_gauge('codex_health_status', {"component": "ollama"}, 1 if ollama_ok else 0)
    except Exception:
        pass

    return mcp_ok, mcp_tools, mcp_rt, ollama_ok, ollama_rt

